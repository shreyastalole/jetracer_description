<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Physical properties for JetRacer robot -->
  
  <!-- Chassis properties -->
  <xacro:property name="chassis_length" value="0.50"/>
  <xacro:property name="chassis_width" value="0.30"/>
  <xacro:property name="chassis_height" value="0.12"/>
  <xacro:property name="chassis_mass" value="2.0"/>
  
  <!-- Chassis inertia (approximated as box) -->
  <xacro:property name="chassis_ixx" value="${(chassis_mass/12) * (chassis_width*chassis_width + chassis_height*chassis_height)}"/>
  <xacro:property name="chassis_iyy" value="${(chassis_mass/12) * (chassis_length*chassis_length + chassis_height*chassis_height)}"/>
  <xacro:property name="chassis_izz" value="${(chassis_mass/12) * (chassis_length*chassis_length + chassis_width*chassis_width)}"/>
  
  <!-- Wheel properties -->
  <xacro:property name="wheel_radius" value="0.06"/>
  <xacro:property name="wheel_width" value="0.04"/>
  <xacro:property name="wheel_mass" value="0.1"/>
  
  <!-- Wheel inertia (approximated as cylinder) -->
  <xacro:property name="wheel_ixx" value="${(wheel_mass/12) * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"/>
  <xacro:property name="wheel_iyy" value="${(wheel_mass/2) * wheel_radius*wheel_radius}"/>
  <xacro:property name="wheel_izz" value="${(wheel_mass/12) * (3*wheel_radius*wheel_radius + wheel_width*wheel_width)}"/>
  
  <!-- Vehicle geometry -->
  <xacro:property name="wheelbase" value="0.20"/>  <!-- Distance between front and rear axles -->
  <xacro:property name="track_width" value="0.16"/>  <!-- Distance between left and right wheels -->
  
  <!-- Steering properties -->
  <xacro:property name="max_steering_angle" value="0.6458"/>  <!-- ~37 degrees in radians -->

</robot>
